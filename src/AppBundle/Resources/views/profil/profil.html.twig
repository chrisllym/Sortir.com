{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <div class="col-md-4">
            <img src="{{ asset('image/default.jpg') }}" class="img-thumbnail" style="width: 50%" alt="Image profil" id="photo" />
        </div>
        <div class="container mt-4 col-md-8">
            <h1 class="text-center">Mon profil</h1>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_row(form.pseudo) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.telephone) }}
                {{ form_row(form.mail) }}
                {{ form_row(form.motDePasse) }}
                {{ form_row(form.sitesNomSite) }}
                {{ form_row(form.photo) }}
            <div class="text-center">
                {{ form_widget(form.enregistrer) }}
                {{ form_widget(form.annuler, {'attr': {'class': 'ml-5 btn-primary'}}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}